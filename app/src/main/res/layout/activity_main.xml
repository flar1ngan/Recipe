<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/recipeListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="#222831" />

    <Button
        android:id="@+id/addRecipeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:backgroundTint="#FFD369"
        android:fontFamily="@font/baloo"
        android:text="PUBLICĒT RECEPTI"
        android:textColor="#222831"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/setSubscriptionPriceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:backgroundTint="#FFD369"
        android:fontFamily="@font/baloo"
        android:text="ABONĒŠANAS CENA"
        android:textColor="#222831"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/mySubscriptionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:backgroundTint="#FFD369"
        android:fontFamily="@font/baloo"
        android:text="MANI ABONEMENTI"
        android:textColor="#222831"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:backgroundTint="#FFD369"
        android:fontFamily="@font/baloo"
        android:text="ATSLĒGTIES"
        android:textColor="#222831"
        android:textSize="22sp"
        android:textStyle="bold" />
</LinearLayout>